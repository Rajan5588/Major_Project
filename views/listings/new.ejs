<%layout("/layouts/boilerplate") %>
     <div class="row">
          <div class="col-8 offset-2" >
     <h3>Create a new Listing</h3>
     <form method="post" action="/listings" novalidate class="needs-validation"  enctype="multipart/form-data">
   <div class="mb-3">
     <label for="title" class="form-label">Title</label>
     <input name="listing[title]" class="form-control" required>
     <div class="valid-feedback">Title looks good!</div>
     <div class="invalid-feedback">Title should be valid!</div>

   </div>
   <div class="mb-3">
     <label for=" description" class="form-label">Description</label>
     <textarea name="listing[description]" class="form-control" required></textarea>
     <div class="invalid-feedback">Please Enter a short description!</div>
     <div class="valid-feedback">description looks good!</div>
   </div>
      <div class="mb-3">
        <label for="image" class="form-label"> Upload Listing Image </label>
        <input name="listing[image]"  class="form-control"  type="file" required>
         
    </div>
      <div  class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input name="listing[price]" class="form-control" type="number" required>
          <div class="invalid-feedback">price should be valid!</div>
               <div class="valid-feedback"> good price!</div>
               
      </div>
   <div class="mb-3" >
     <label for="country" class="form-label">Country</label>
     <input name="listing[country]" class="form-control"  type="text" required>
     <div class="invalid-feedback">country should be valid!</div>
     <div class="valid-feedback">country name is the best!</div>

   </div>  
 <div class="mb-3">     <label for="location" class="form-label">Location</label>
     <input name="listing[location]" class="form-control"  type="text" required>
     <div class="invalid-feedback">location should be valid!</div>
     <div class="valid-feedback">location name is the best!</div>


</div>  
      <button class="btn btn-dark">Add</button>
     </form>
</div>
</div>

